FROM python:3.11-slim

WORKDIR /app

# Install only minimal dependencies
RUN pip install --no-cache-dir fastapi==0.116.1 uvicorn[standard]==0.35.0

# Copy debug server
COPY main_debug_logging.py main.py

# Use PORT environment variable
CMD sh -c "python -m uvicorn main:app --host 0.0.0.0 --port ${PORT:-8000} --log-level info"